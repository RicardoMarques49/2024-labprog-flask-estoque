{% extends '_layout.jinja2' %}
{%  from 'utils/menus.jinja2' import linhas_por_pagina, nome_parcial with context %}
{% from 'bootstrap5/utils.html' import render_icon %}
{% from 'bootstrap5/pagination.html' import render_pagination %}
<!-- templates/produto/relatorio.jinja2 -->

{% block content %}
<head>

    <title>Relatório</title>
</head>
<body>
    <h1>Relatório de Produtos por Categoria</h1>
    <table>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Categoria</th>
                <th>Total de Produtos</th>
                <th>Valor em Estoque</th>
            </tr>
        </thead>
        <tbody>
            {% for resultado in resultados %}
            <tr>
                <td>{{ resultado.nome }}</td>
                <td>{{ resultado.total_produtos }}</td>
                <td>{{ "%.2f" | format(resultado.valor_estoque) }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

</body>
{% endblock %}
